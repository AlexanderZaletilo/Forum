@model Forum.ViewModels.TopicCreationViewModel
@{
    ViewData["Title"] = "Topic creation";
}
<form  class="form-group" method="post" asp-controller="Topic" asp-action="Create"
      asp-route-returnUrl="~/Home/Index">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control col-sm-5" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="InitialMessage"></label>
        <textarea class="form-control" rows="8" asp-for="InitialMessage"></textarea>
        <span asp-validation-for="InitialMessage"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Create" />
</form>
