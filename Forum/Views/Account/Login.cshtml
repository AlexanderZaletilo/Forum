@model Forum.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Login";
}
<h2>Entrance in app</h2>
<form class="form-group" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Login"></label><br />
        <input class="form-control col-sm-4" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div  class="form-group">
        <label asp-for="Password"></label><br />
        <input  class="form-control col-sm-4" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-check">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label><br/><br />
    </div>
    <input  class="btn btn-primary" type="submit" value="Log in" />
</form>