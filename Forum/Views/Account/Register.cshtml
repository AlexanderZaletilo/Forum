@model Forum.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}
<h2>Registration of a new user</h2>
<form class="form-group" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Login"></label><br />
        <input class="form-control  col-sm-4" asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input class="form-control col-sm-4" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input class="form-control  col-sm-4" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm"></label><br />
        <input class="form-control  col-sm-4" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <h4>After registration you will need to verify your email to log in</h4>
    <input class="btn btn-primary" type="submit" value="Register" />
</form>